<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/activity_main2"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab"
        android:layout_width="158dp"
        android:layout_height="156dp"
        android:layout_gravity="bottom|start|right"
        fab:menu_colorNormal="#FFFF"
        fab:menu_colorPressed="#0000"
        app:menu_icon="@drawable/settings"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="15dp"
        fab:menu_labels_ellipsize="start"
        fab:menu_labels_singleLine="false">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="mini"
            android:src="@drawable/photolibrary"
            fab:fab_colorNormal="#FFFF"
            fab:fab_colorPressed="#0000" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fab:fab_size="mini"
            android:src="@drawable/mic2"
            fab:fab_colorNormal="#FFFF"
            fab:fab_colorPressed="#0000"/>

    </com.github.clans.fab.FloatingActionMenu>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/play"
        android:layout_gravity="center_horizontal|bottom"
        style="@style/Widget.AppCompat.Button.Borderless"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proximo"
        android:id="@+id/proximo"
        android:layout_gravity="right|center_vertical"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anterior"
        android:id="@+id/anterior"
        android:layout_gravity="left|center_vertical"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/house"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/home"
        android:layout_gravity="left|top" />


</FrameLayout>